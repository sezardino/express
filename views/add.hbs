<h1>Add book</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="name" name="name" type="text" class="validate" required />
        <label for="name">Name</label>
        <span class="helper-text" data-error="Enter name"></span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required />
        <label for="price">Price</label>
        <span class="helper-text" data-error="Enter price"></span>
    </div>
    <div class="input-field">
        <input id="image" name="image" type="text" class="validate" required />
        <label for="image">book Image</label>
        <span class="helper-text" data-error="Enter url of the image"></span>
    </div>
    <button class="btn btn-primary">Add book</button>
</form>
