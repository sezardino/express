<h1>All books</h1>

{{#each books}}
    <div class="row">
        <div class="col s6 offset-s3">
            <div class="cart">
                <div class="cart-image">
                    <img src="{{image}}" alt="{{name}}" />
                </div>
                <div class="cart-content">
                    <span class="cart-title">{{name}}</span>
                    <p class="price">{{price}}</p>
                </div>
                <div class="cart-action action">
                    <a href="/books/{{id}}" target="_blank">Bye</a>
                    <a
                        href="/books/{{id}}/edit?allow=true"
                        target="_blank"
                    >Edit book</a>
                    <form action="/cart/add" method="POST" class="form-add">
                        <input type="hidden" name="id" value="{{id}}" />
                        <button class="btn btn-primary">Add to cart</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{{/each}}
