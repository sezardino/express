<form action="/courses/edit" method="POST">
    <div class="input-field">
        <input id="name" name="name" type="text" class="validate" required value="{{course.name}}" />
        <label for="name">Name</label>
        <span class="helper-text" data-error="Enter name"></span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required value="{{course.price}}" />
        <label for="price">Price</label>
        <span class="helper-text" data-error="Enter price"></span>
    </div>
    <div class="input-field">
        <input id="image" name="image" type="text" class="validate" required value="{{course.image}}" />
        <label for="image">Course Image</label>
        <span class="helper-text" data-error="Enter url of the image"></span>
    </div>
        <input name="id" type="hidden" value="{{course.id}}" />
    <button class="btn btn-primary">Edit</button>
</form>
